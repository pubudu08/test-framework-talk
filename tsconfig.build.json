{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2015.promise",
      "es2017",
      "esnext.asynciterable"
    ],
    "paths": {
      "#*": [
        "src/app/*",
        "generated/*"
      ],
      "*": [
        "libs/*"
      ]
    }
  },
  "exclude": [
      "node_modules",
      "dist",
      "build",
      "test",
      "**/*.spec.ts"
  ],
  "compileOnSave": false
}